<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#00000000"
        >



        <TextView
            android:id="@+id/cabecera_dialog_pago"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="#7F51D1"
            android:gravity="center"
            android:text="APAGADO"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/valores_pagos_hoy2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="62dp"
            android:gravity="center"
            android:text="No fue enviado debido a que \n vehículo circula a más de 15KM/H"
            android:textColor="#7F51D1"
            android:textSize="17dp"
            android:textStyle="bold" />


    </RelativeLayout>



</RelativeLayout>