<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="272dp"
    android:background="#A5A5A5"
    android:orientation="horizontal"
    android:padding="5dip">



    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/corner_cardview"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">



        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="272dp"
            android:background="@drawable/corner_cardview">


            <TextView
                android:id="@+id/imei_vehic"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginTop="18dp"
                android:background="#4260FD"
                android:gravity="bottom|center"
                android:text="863457050984705"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_row="0" />

            <TextView
                android:id="@+id/label_tx"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="#3350EF"
                android:gravity="center"
                android:text="DATOS DEL VEHÍCULO"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                 app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_row="0" />




            <ImageView
                android:id="@+id/image_vehics"
                android:layout_width="54dp"
                android:layout_height="48dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="6dp"
                android:scaleType="centerCrop"
                app:layout_column="0"
                app:layout_columnSpan="0"
                app:layout_row="4"
                android:background="@drawable/circular_background"
                />


            <ImageView
                android:id="@+id/burbuja1"
                android:layout_width="58dp"
                android:layout_height="55dp"
                android:layout_marginLeft="-19dp"
                android:layout_marginTop="-3dp"
                android:scaleType="centerCrop"
                app:layout_column="0"
                app:layout_columnSpan="0"
                app:layout_row="0"
                android:background="@drawable/circular_background"/>
            <ImageView
                android:id="@+id/image_vehic"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="0dp"
                app:layout_column="0"
                app:layout_columnSpan="0"
                app:layout_row="0"
                app:srcCompat="@drawable/instalado"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/label_placa"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/corners_dialog_msg"
                android:gravity="center"
                android:text="PLACA"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_columnSpan="2"
                app:layout_row="1" />

            <TextView
                android:id="@+id/dato_placa"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/background_outline"
                android:gravity="center"
                android:text="P000AAA"
                android:textColor="#1B22BD"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_row="1"/>


            <TextView
                android:id="@+id/label_marca"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="2dp"
                android:text="MARCA"
                android:gravity="center"
                android:background="@drawable/corners_dialog_msg"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_row="2" />

            <TextView
                android:id="@+id/dato_marca"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/background_outline"
                android:gravity="center"
                android:text="-"
                android:textColor="#1B22BD"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_row="2" />


            <TextView
                android:id="@+id/label_modelo"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="2dp"
                android:text="MODELO"
                android:gravity="center"
                android:background="@drawable/corners_dialog_msg"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_row="3" />


            <TextView
                android:id="@+id/dato_modelo"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/background_outline"
                android:gravity="center"
                android:text="0"
                android:textColor="#1B22BD"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_row="3" />

            <TextView
                android:id="@+id/label_type"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="2dp"
                android:text="TIPO DE VEHICULO"
                android:gravity="center"
                android:background="@drawable/corners_dialog_msg"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_columnSpan="0"
                app:layout_row="4" />


            <TextView
                android:id="@+id/dato_type"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/background_outline"
                android:gravity="center"
                android:text="-"
                android:textColor="#1B22BD"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_row="4" />


            <TextView
                android:id="@+id/producto_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:textSize="0sp"
                app:layout_column="0"
                app:layout_row="0" />

            <TextView
                android:id="@+id/type_vehic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:textSize="0sp"
                app:layout_column="0"
                app:layout_row="0" />



            <TextView
                android:id="@+id/model_gps_vehic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:textSize="0sp"
                app:layout_column="0"
                app:layout_row="0" />

            <TextView
                android:id="@+id/estado_vehic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:textSize="0sp"
                app:layout_column="0"
                app:layout_row="0" />

        </androidx.gridlayout.widget.GridLayout>


    </RelativeLayout>


</RelativeLayout>