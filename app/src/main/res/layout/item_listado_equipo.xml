                android:gravity="center"
                android:text="-"
                android:textColor="#393939"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_column="1"
                app:layout_columnSpan="2"
                app:layout_row="0" />

            <TextView
                android:id="@+id/coordena_label2F"
                android:layout_width="130dp"
                android:layout_height="14dp"
