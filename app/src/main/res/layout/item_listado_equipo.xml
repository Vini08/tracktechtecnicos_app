                app:layout_gravity="center|center_horizontal|top"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/image_ir_punto"
                android:layout_width="55dp"
                android:layout_height="58dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="30dp"
                app:layout_column="3"
                app:layout_row="0"
                app:srcCompat="@drawable/visiont" />

            <TextView
                android:id="@+id/ubicaion_label1"
                android:layout_width="85dp"
                android:layout_height="34dp"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="88dp"
                android:background="#9196FF"
                android:gravity="center"
                android:text="Ver GPS"
                android:textColor="#1C1C1C"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_column="3"
                app:layout_columnSpan="0"
                app:layout_gravity="center|center_horizontal|top"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/image_estado_asig"
