<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/corner_dialog_preguntas">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="340dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="260dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="password.json"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/cabecera_dialog_pago"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="#484fdd"
            android:gravity="center"
            android:text="INICIO DE SESION"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/valores_pagos_hoy"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="USUARIO O CONTRASEÃ‘A\n SON INCORRECTOS."
            android:textColor="@color/colorB"
            android:textSize="18dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/back_session"
            style="?android:textAppearanceSmall"
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="270dp"
            android:drawableLeft="@drawable/back"
            android:text="regresar"
            android:textColor="#fff"
            android:textSize="10dp"
            android:textStyle="bold"
            app:backgroundTint="#CC3131" />

    </RelativeLayout>



</RelativeLayout>