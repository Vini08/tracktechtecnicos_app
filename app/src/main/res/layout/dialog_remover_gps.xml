<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/corner_dialog_preguntas">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <TextView
            android:id="@+id/cabecera_dialog_pago"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="#F63939"
            android:gravity="center"
            android:text="Â¿Seguro que quiere remover \n el GPS de esta unidad ?"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/obser_remove_gpss"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="#E1E1E1"
            android:ems="10"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:hint="- - -"
            android:inputType="textAutoComplete"
            android:textColor="#323232"
            android:textColorHint="#7E7E7E"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/valores_pagos_hoy"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="Ingrese el motivo por el cual se remueve el GPS"
            android:textColor="@color/colorB"
            android:textSize="13dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/boton_remover_gps"
            style="?android:textAppearanceSmall"
            android:layout_width="185dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="140dp"
            android:drawableLeft="@drawable/check"
            android:text="REMOVER GPS"
            android:textColor="#fff"
            android:textSize="10dp"
            android:textStyle="bold"
            app:backgroundTint="#5AE15F" />

        <Button
            android:id="@+id/back_session_remove_gps"
            style="?android:textAppearanceSmall"
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="200dp"
            android:drawableLeft="@drawable/back"
            android:text="regresar"
            android:textColor="#fff"
            android:textSize="10dp"
            android:textStyle="bold"
            app:backgroundTint="#3F51B5" />

    </RelativeLayout>



</RelativeLayout>