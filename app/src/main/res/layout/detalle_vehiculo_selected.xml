<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cvContent"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        app:cardBackgroundColor="#CC6C6C6C"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical">




            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/grid_velocidad"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/dato_vehic3"
                    android:layout_width="75dp"
                    android:layout_height="20dp"
                    android:gravity="left"
                    android:layout_marginRight="5dp"
                    android:text="  VELOCIDAD"
                    android:textColor="#FFFFFF"
                    android:textIsSelectable="false"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_column="0"
                    app:layout_gravity="fill_horizontal"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/valor_vehic3"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/outline_blanco"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textIsSelectable="false"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_column="1"
                    app:layout_gravity="fill_horizontal"
                    app:layout_row="0" />
            </androidx.gridlayout.widget.GridLayout>







            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/grid_ignicio"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/dato_vehic6"
                    android:layout_width="75dp"
                    android:layout_height="20dp"
                    android:gravity="left"
                    android:layout_marginRight="5dp"
                    android:text="  IGNICIÃ“N"
                    android:textColor="#FFFFFF"
                    android:textIsSelectable="false"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:layout_column="0"
                    app:layout_gravity="fill_horizontal"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/valor_vehic6"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/outline_blanco"
                    android:gravity="center"
                    android:text="- - -"
                    android:textColor="#FFFFFF"
                    android:textIsSelectable="false"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_column="1"
                    app:layout_gravity="fill_horizontal"
                    app:layout_row="0" />
            </androidx.gridlayout.widget.GridLayout>





            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/grid_pocision"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/dato_vehic1"
                    android:layout_width="85dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text=""
                    android:background="#80E43A"
                    android:textColor="#FFFFFF"
                    android:textIsSelectable="false"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_column="0"
                    app:layout_gravity="fill_horizontal"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/valor_vehic1"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textIsSelectable="false"
                    android:textSize="7sp"
                    app:layout_column="1"
                    app:layout_gravity="fill_horizontal"
                    app:layout_row="0" />

            </androidx.gridlayout.widget.GridLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:orientation="vertical"
                android:padding="4dp">



                <ImageView
                    android:id="@+id/refresh_ruta"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/recarga"
                    app:tint="#595959"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"/>

                <ImageView
                    android:id="@+id/imageClose"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/cerra_app"
                    app:tint="#595959" />


            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvContent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-15dp"
        android:rotation="90"
        android:src="@drawable/bg_triangle"
        app:tint="#686868" />

</RelativeLayout>