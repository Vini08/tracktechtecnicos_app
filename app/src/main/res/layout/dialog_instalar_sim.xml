<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/corner_dialog_preguntas">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="310dp">

        <TextView
            android:id="@+id/cabecera_dialog_pago"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="#314AD6"
            android:gravity="center"
            android:text="Â¿Seguro que quiere instalar \n este SIM en la siguiente unidad ?"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/unidades_to_gps"
            style="@style/Widget.AppCompat.DropDownItem.Spinner"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:background="@drawable/corner_spinner"
            android:gravity="right"
            android:popupBackground="#979CFA"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/imei_spiner"
            android:layout_width="190dp"
            android:layout_height="20dp"
            android:layout_marginTop="164dp"
            android:layout_centerHorizontal="true"
            android:background="#979CFA"
            android:gravity="center"
            android:text="-"
            android:textColor="#252525"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_gravity="center|center_horizontal|top"
            />



        <TextView
            android:id="@+id/valor_telefono_ensim"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="57dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorB"
            android:textSize="11dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/valor_icc_ensim"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="68dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorB"
            android:textSize="11dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/valores_pagos_hoy"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="85dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="SELECCIONE UNA UNIDAD"
            android:textColor="@color/colorB"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/valor_ime"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="146dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="IMEI DE UNIDAD SELECCIONADA"
            android:textColor="@color/colorB"
            android:textSize="15dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/boton_indtsl_sim"
            style="?android:textAppearanceSmall"
            android:layout_width="185dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="190dp"
            android:drawableLeft="@drawable/check"
            android:text="INSTALAR SIM"
            android:textColor="#fff"
            android:textSize="10dp"
            android:textStyle="bold"
            app:backgroundTint="#5AE15F" />

        <Button
            android:id="@+id/back_session_install_sim"
            style="?android:textAppearanceSmall"
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="248dp"
            android:drawableLeft="@drawable/back"
            android:text="regresar"
            android:textColor="#fff"
            android:textSize="10dp"
            android:textStyle="bold"
            app:backgroundTint="#3F51B5" />

    </RelativeLayout>



</RelativeLayout>