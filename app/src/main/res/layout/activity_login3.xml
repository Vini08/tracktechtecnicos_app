<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sub_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
  >

    <!-- Login progress -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f5f5f5">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="880dp"
            android:layout_gravity="fill_vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5">


            <ImageView
                android:id="@+id/imageButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/logo_track_small" />



            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="300dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="#FF5722"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/user" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="33dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/password" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bkg_edittext_sc1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:background="#EAEAEA"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/usuar"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:background="#EAEAEA"
                            android:ems="10"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:hint="usuario"
                            android:inputType="textAutoComplete"
                            android:textColor="#7E39F8"
                            android:textColorHint="#7E7E7E"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#EAEAEA"
                        android:orientation="vertical"></LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:background="#EAEAEA"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/passwd"
                            android:layout_width="210dp"
                            android:layout_height="match_parent"
                            android:autoText="false"
                            android:background="#EAEAEA"
                            android:gravity="center"
                            android:hint="contraseÃ±a"
                            android:inputType="textPassword"
                            android:textColor="#7E39F8"
                            android:textColorHint="#7E7E7E"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btn_inicio_session"
                style="?android:textAppearanceSmall"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="430dp"
                android:text="Entrar"
                android:textColor="#fff"
                android:textStyle="bold"
                app:backgroundTint="#FF5722" />


            <ImageView
                android:id="@+id/image_huella"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="530dp"
                app:srcCompat="@drawable/huella" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="640dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="TECNICOS"
                android:textColor="#303030"
                android:textSize="28sp"
                android:textStyle="bold" />



        </RelativeLayout>


        </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </ScrollView>




    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:layout_marginTop="214dp"
        android:indeterminateTint="#484fdd"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone"></ProgressBar>
</FrameLayout>
