<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="504dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="#EFEFEF">


        <RelativeLayout
            android:id="@+id/dos"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:layout_marginTop="500dp"
            android:background="#FFFFFF"
            android:elevation="20dp">

            <Button
                android:id="@+id/bt_nuevo"
                android:layout_width="245dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="40dp"
                android:text="OPCIONES"
                android:textSize="19sp"
                android:textStyle="bold"
                app:backgroundTint="#4D90C6"
                app:icon="@drawable/configura" />

            <TextView
                android:id="@+id/label_tecs"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_below="@+id/imageView4"
                android:layout_marginTop="-16dp"
                android:gravity="center"
                android:text="Luis Galan"
                android:textColor="#252525"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#AFAFAF" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_below="@+id/bt_nuevo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                app:srcCompat="@drawable/logo_track_small" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="490dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/curve_background"
            android:elevation="20dp">


            <TextView
                android:id="@+id/text12"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#484fdd"
                android:drawableStart="@drawable/menu"
                android:gravity="center"
                android:paddingStart="18dp"
                android:paddingEnd="60dp"
                android:text="MENU"
                android:textAllCaps="true"
                android:textColor="@android:color/background_light"
                android:textSize="36sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_unidades"
                android:layout_width="285dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:paddingStart="15dp"
                android:paddingEnd="50dp"
                android:text="VEHICULOS"
                android:textSize="19sp"
                android:textStyle="bold"
                app:backgroundTint="#6F76FD"
                app:icon="@drawable/carro"/>

            <Button
                android:id="@+id/bt_sim_nuevos"
                android:layout_width="285dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="260dp"
                android:paddingStart="15dp"
                android:paddingEnd="50dp"
                android:text="LISTADOS"
                android:textSize="19sp"
                android:textStyle="bold"
                app:backgroundTint="#3592DC"
                app:icon="@drawable/listado"/>

            <Button
                android:id="@+id/bt_usados"
                android:layout_width="285dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="165dp"
                android:paddingStart="10dp"
                android:paddingEnd="70dp"
                android:text="RUTAS"
                android:textSize="19sp"
                android:textStyle="bold"
                app:backgroundTint="#3592DC"
                app:icon="@drawable/ruta"/>

            <Button
                android:id="@+id/bt_sim_usados"
                android:layout_width="285dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="355dp"
                android:paddingStart="15dp"
                android:paddingEnd="50dp"
                android:text="USUARIO"
                android:textSize="19sp"
                android:textStyle="bold"
                app:backgroundTint="#3592DC"
                app:icon="@drawable/usuarios"/>

            <CheckBox
                android:id="@+id/checkBox_noty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="445dp"
                android:layout_marginLeft="28dp"
                android:text="Notificaciones"/>


        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>